<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_blue">

        <ImageView
            android:id="@+id/author_icon_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fifteen_dp"
            android:src="@mipmap/author_icon_back" />

        <ImageView
            android:id="@+id/author_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/fifteen_dp"
            android:src="@mipmap/author_share" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fifteen_dp"
            android:layout_toLeftOf="@+id/author_share"
            android:src="@mipmap/author_message" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sixty_dp"
                    android:background="@color/color_blue">

                    <TextView
                        android:id="@+id/author_zero_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/five_dp"
                        android:layout_marginLeft="@dimen/one_hundred_dp"
                        android:layout_marginTop="@dimen/five_dp"
                        android:text="0"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/author_zero_one"
                        android:layout_marginBottom="@dimen/five_dp"
                        android:layout_marginLeft="@dimen/one_hundred_dp"
                        android:layout_marginTop="@dimen/five_dp"
                        android:text="@string/pay_attention_to_the_people" />

                    <TextView
                        android:id="@+id/author_zero_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/five_dp"
                        android:layout_marginLeft="@dimen/two_hundred_dp"
                        android:layout_marginTop="@dimen/five_dp"
                        android:text="0"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/author_zero_two"
                        android:layout_marginBottom="@dimen/five_dp"
                        android:layout_marginLeft="200dp"
                        android:layout_marginTop="5dp"
                        android:text="@string/pay_attention_to_the_company" />

                    <TextView
                        android:id="@+id/author_fans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/five_dp"
                        android:layout_marginLeft="@dimen/three_hundred_dp"
                        android:layout_marginTop="@dimen/five_dp"
                        android:text="85"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/author_fans"
                        android:layout_marginBottom="@dimen/five_dp"
                        android:layout_marginLeft="@dimen/three_hundred_dp"
                        android:layout_marginTop="@dimen/five_dp"
                        android:text="@string/fans" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/author_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/fifteen_dp"
                    android:src="@mipmap/ic_launcher" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/eighty_dp"
                android:layout_marginLeft="@dimen/fifteen_dp"
                android:layout_marginRight="@dimen/fifteen_dp">

                <TextView
                    android:id="@+id/author_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fifteen_dp"
                    android:text="果果" />

                <TextView
                    android:id="@+id/author_brief_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/author_name"
                    android:layout_marginTop="@dimen/fifteen_dp"
                    android:lines="2"
                    android:text="不仅仅是码农.联系请通过微信:shun_begins" />

                <ImageView
                    android:id="@+id/author_focus_on"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/author_tips_icon_first" />

                <ImageView
                    android:id="@+id/author_into_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/author_focus_on"
                    android:layout_margin="@dimen/five_dp"
                    android:src="@mipmap/common_icon_arrow" />

            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/one_dp"
                android:layout_marginLeft="@dimen/fifteen_dp"
                android:layout_marginRight="@dimen/fifteen_dp"
                android:background="@color/color_grey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fifteen_dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/posted_articles" />

                <ImageView
                    android:id="@+id/author_into_article"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/common_icon_arrow" />

                <TextView
                    android:id="@+id/author_total_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/fifteen_dp"
                    android:layout_toLeftOf="@+id/author_into_article" />

                <TextView
                    android:id="@+id/author_total_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/fifteen_dp"
                    android:layout_toLeftOf="@+id/author_total_view" />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>