<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/activity_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_hundred_fifty_dp"
        android:layout_marginTop="@dimen/fifteen_dp"
        android:scaleType="fitXY"
        android:src="@mipmap/logo_36kr_sougou" />

    <TextView
        android:id="@+id/activity_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/five_dp"
        android:layout_marginRight="@dimen/five_dp"
        android:layout_marginTop="@dimen/ten_dp"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:textSize="@dimen/fifteen_sp" />

    <TextView
        android:id="@+id/activity_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/five_dp"
        android:layout_marginRight="@dimen/five_dp"
        android:layout_marginTop="@dimen/ten_dp"
        android:maxLines="2"
        android:textSize="@dimen/ten_sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ten_dp">

        <TextView
            android:id="@+id/activity_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/five_dp"
            android:layout_marginRight="@dimen/fifteen_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:background="@drawable/shape_blue"
            android:padding="@dimen/three_dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/ten_sp" />

        <ImageView
            android:id="@+id/position_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/activity_status"
            android:src="@mipmap/discovery_recent_icon_location" />

        <TextView
            android:id="@+id/activity_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/fifteen_dp"
            android:layout_toRightOf="@+id/position_city"
            android:textSize="@dimen/ten_sp" />

        <TextView
            android:id="@+id/activity_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/twenty_dp"
            android:textSize="@dimen/ten_sp" />
    </RelativeLayout>

</LinearLayout>